<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.widget.TextView" />

        <variable
            name="viewModel"
            type="com.acrcloud.ui.select.SelectMusicViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfcfc"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE}" />

                <EditText
                    android:id="@+id/folder_path_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="folder"
                    android:inputType="textPersonName"
                    android:onClick="@{()->viewModel.toParentFolder()}"
                    android:text="@={viewModel.folderPath}" />

                <Button
                    android:id="@+id/open_folder_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{ () -> viewModel.loadFolder(viewModel.folderPath)}"
                    android:text="Open folder" />

                <Button
                    android:id="@+id/rec_folder_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{ () -> viewModel.editFolderNow()}"
                    android:text="Rec folder" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:items="@{viewModel.songs}" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</layout>